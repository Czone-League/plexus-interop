{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist/main",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "pretty": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "long", "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ]
}