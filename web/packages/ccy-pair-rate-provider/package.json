{
  "name": "@plexus-interop/ccy-pair-rate-provider",
  "version": "0.0.1",
  "description": "Quick start Rate Provider App",
  "main": "index.js",
  "private": true,
  "license": "Apache-2.0",
  "dependencies": {
    "@plexus-interop/client": "0.0.1",
    "@plexus-interop/websocket-transport": "0.0.1"
  },
  "scripts": {
    "prebuild": "trash dist",
    "compile": "tsc -p tsconfig.json",
    "copy-assets": "copyfiles src/gen/* dist/main && copyfiles -f src/views/* dist",
    "package": "browserify ./dist/main/src/index.js --outfile ./dist/app.bundle.js",
    "build": "npm run compile && npm run copy-assets && npm run package",
    "start": "../../../bin/win-x86/samples/ElectronAppLauncher.cmd --apps \"../../../web/packages/ccy-pare-rate-provider/dist/index.html\""
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "copyfiles": "^1.2.0",
    "electron": "1.7.5",
    "trash": "^4.1.0",
    "trash-cli": "^1.4.0",
    "typescript": "^2.5.3"
  }
}
