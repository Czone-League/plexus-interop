{
    "name": "@plexus-interop/cli",
    "version": "0.1.0",
    "main": "index.js",
    "description": "Plexus Interop CLI tools",
    "license": "Apache-2.0",
    "preferGlobal": true,
    "bin": {
      "plexus": "./cli.js"
    },
    "scripts": {
      "prebuild": "yarn lint && trash dist",
      "build": "yarn build:main",
      "postbuild": "yarn test",
      "build:main": "tsc -p tsconfig.json",
      "build:watch": "tsc -w -p tsconfig.json",
      "lint": "tslint src/**/*.ts",
      "unit": "jest --coverage",
      "test": "yarn unit"
    },
    "dependencies": {
      "@plexus-interop/common": "0.1.0",
      "commander": "2.15.1",
      "protobufjs": "6.8.0"
    },
    "devDependencies": {
      "@types/chai": "^4.0.2",
      "@types/jest": "^18.1.1",
      "@types/mocha": "^2.2.41",
      "@types/node": "^7.0.5",
      "chai": "^4.1.0",
      "jest": "^21.0.1",
      "trash": "^4.1.0",
      "trash-cli": "^1.4.0",
      "ts-mockito": "2.0.2",
      "tslint": "5.8.0",
      "typescript": "2.6.1",
      "yarn": "1.4.0"
    },
    "jest": {
      "testEnvironment": "node",
      "transform": {
        ".(ts|tsx)": "<rootDir>/../../configs/jest-preprocessor.js"
      },
      "moduleFileExtensions": [
        "ts",
        "js"
      ],
      "testRegex": ".+/dist/main/tests/.+spec.js$",
      "coverageDirectory": "coverage",
      "collectCoverageFrom": [
        "dist/main/src/**/*.js",
        "!dist/main/src/gen/**/*.js",
        "!src/*.d.ts",
        "!src/**/*.d.ts",
        "!src/**/*.spec.ts"
      ]
    }
  }
  