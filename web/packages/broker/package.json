{
  "name": "@plexus-interop/broker",
  "types": "dist/main/src/index.d.ts",
  "description": "Plexus Interop Broker",
  "license": "Apache-2.0",
  "version": "0.1.1",
  "scripts": {
    "prebuild": "yarn lint && trash dist",
    "build": "yarn build:main",
    "postbuild": "yarn test",
    "build:main": "tsc -p tsconfig.json",
    "lint": "tslint src/**/*.ts",
    "unit": "jest --coverage",
    "pretest": "yarn lint",
    "test": "yarn unit",
    "unpublish": "npm unpublish @plexus-interop/broker@0.1.1",
    "postunpublish": "echo 'Unpublished'",
    "prerepublish": "echo 'Republishing started...'",
    "publish-package": "npm run build && npm publish",
    "republish": "npm run unpublish && npm i && npm run publish-package",
    "postrepublish": "echo 'Package republished successfully!'"
  },
  "dependencies": {
    "@plexus-interop/client-api": "0.1.1",
    "@plexus-interop/transport-common": "0.1.1",
    "@types/jstorage": "^0.3.30",
    "jstorage": "^0.4.8",
    "long": "^3.2.0",
    "protobufjs": "^6.8.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.2",
    "tslib": "^1.7.1"
  },
  "main": "dist/main/src/index.js",
  "devDependencies": {
    "@types/jest": "^18.1.1",
    "@types/long": "^3.0.31",
    "@types/node": "^7.0.5",
    "babel-register": "^6.23.0",
    "jasmine-reporters": "^2.2.0",
    "jest": "~18.1.0",
    "trash-cli": "^1.4.0",
    "tslint": "^5.6.0",
    "typescript": "2.6.1",
    "yarn": "^1.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jasmine.js",
    "transform": {
      ".(ts|tsx|js)": "<rootDir>/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>(node_modules)/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "<rootDir>(tests/).*\\.(test|spec)\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
