{
    "name": "plexus-interop-vscode",
    "displayName": "Plexus Interop",
    "description": "Plexus Interop Language Support",
    "version": "0.0.1",
    "publisher": "Plexus Interop",
    "engines": {
        "vscode": "^1.8.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:interop"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "interop",
                "aliases": [
                    "interop"
                ],
                "extensions": [
                    ".interop"
                ],
                "configuration": "./interop.configuration.json"
            },
            {
                "id": "proto",
                "aliases": [
                    "proto"
                ],
                "extensions": [
                    ".proto"
                ],
                "configuration": "./interop.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "interop",
                "scopeName": "text.interop",
                "path": "./syntaxes/interop.tmLanguage"
            },
            {
                "language": "proto",
                "scopeName": "text.proto",
                "path": "./syntaxes/proto.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.1.5",
        "vscode": "1.1.14",
        "@types/node": "^6.0.40"
    },
    "dependencies": {
        "vscode-languageclient": "3.2.0"
    }
}
